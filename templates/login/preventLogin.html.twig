{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('/assetsGp/css/bgPyke.css') }}" rel="stylesheet" />
    <link href="{{ asset('/assetsGp/css/form.css') }}" rel="stylesheet" />
    <!-- Favicons -->
    <link href="/assetsGp/img/ico/guerrero.ico" rel="icon">
    <link href="/assetsGp/img/ico/guerrero.ico" rel="apple-touch-icon">
{% endblock %}

{% block body %}

    {% if error %}

        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>

    {% endif %}

    <div class="container bg-light rounded box-form">
        <h1 id="after-header" class="color-honey bold">Iniciar sesi√≥n</h1>{# bbbacab #}
        <div class="row">
            <div class="row form">
                <div class="col-6">
                    <form action="{{ path('login') }}" method="post">
                        <label for="username">Email:</label><br>
                        <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                        <br>
                        <label for="password">Password:</label><br>
                        <input type="password" id="password" name="_password"/>
                        <br><br>
                        {# If you want to control the URL the user is redirected to on success
                        <input type="hidden" name="_target_path" value="/account"/> #}
                        <button type="submit">login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
